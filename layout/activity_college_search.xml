<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/background"
        tools:context="com.sample.foo.collegeapphelper.CollegeSearch">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:padding="10dp"
            android:text="@string/searchInstructions"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:orientation="horizontal"
            tools:context=".GridLayoutActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="15dp"
                android:text="@string/searchPlan"/>

            <Spinner
                android:id="@+id/decisionSpinner"
                android:layout_width="fill_parent"
                android:padding="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="15dp"
                android:text="@string/searchDeadline"/>

            <Spinner
                android:id="@+id/deadlineSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="15dp"
                android:text="@string/searchPlatform"/>

            <Spinner
                android:id="@+id/platformSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="15dp"
                android:text="@string/searchInterview"/>

            <Spinner
                android:id="@+id/interviewSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="15dp"
                android:text="@string/searchMajor"/>

            <Spinner
                android:id="@+id/majorSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"/>


        </GridLayout>

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homeButton"/>

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/searchButton"/>


    </LinearLayout>
</layout>